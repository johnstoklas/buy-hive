{
  "manifest_version": 3,
  "name": "BuyHive",
  "version": "1.0.0",
  "description": "Save and organize products from online stores into a single cart.",
  "action": {
    "default_popup": "popup.html"
  },
  "icons": { 
    "48": "images/buyhive_logo_48.png",
    "128": "images/buyhive_logo_128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://buyhive-backend-production.up.railway.app/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
