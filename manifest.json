{
  "manifest_version": 3,
  "name": "Extension",
  "description": "Base Level Extension",
  "version": "1.0",
  "action": {
    "default_popup": "./popup.html",
    "default_icon": "public/images/buyhive_gradient2_13percent.png"
  },
  "background": { 
    "service_worker": "background/index.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webNavigation",
    "identity"
  ],
  "host_permissions":["http://127.0.0.1:8000/"],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ]
}
