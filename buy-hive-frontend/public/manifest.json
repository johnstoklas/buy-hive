{
  "manifest_version": 3,
  "name": "BuyHive",
  "version": "0.1.0",
  "description": "Save and organize products from anywhere.",
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://buyhive-backend-production.up.railway.app/*"
  ],
  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["src/content/index.js"],
    "run_at": "document_end"
  }
]

}
